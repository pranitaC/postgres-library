<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Library management system</title>
    <link rel="stylesheet" type="text/css" href="/stylesheets/bootstrap.css"></link>
    <link rel="stylesheet" type="text/css" href="/stylesheets/style.css"></link>
    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="/javascripts/html5shiv.min.js"></script>
      <script src="/javascripts/respond.min.js"></script>
    <![endif]-->
  </head>

  <body>
    <div class="container">
      <h2> Listing Users </h2>
      <table class="table table-bordered">
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Action</th>
        </tr>
        <% for(var i = 0; i < users.length; i++) { %>
        <tr>
          <td><%= users[i].name %></td>
          <td><%= users[i].email %></td>
          <td>
            <form method="POST" action="/users/<%= users[i]._id %>?_method=DELETE">
              <input type="submit" value="Delete"/>
            </form>
          </td>
        </tr>
        <% } %>
      </table>
      <a class="btn btn-info" href="/users/new">Add new user</a>
    </div>
    
  </body>
</html>
